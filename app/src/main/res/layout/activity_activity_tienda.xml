<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.Apps4Ever.DueloMagos.ActivityTienda"
    android:background="@drawable/wallpapertienda">

    <TextView android:text="@string/lblTienda" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/txtViewTienda"
        android:textColor="#ffffffff" />

    <com.getbase.floatingactionbutton.FloatingActionsMenu

        android:id="@+id/famCartas"
        android:layout_width="253dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:gravity="right"
        fab:fab_labelStyle="@style/menu_labels_style"
        fab:fab_labelsPosition="left"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true">
    </com.getbase.floatingactionbutton.FloatingActionsMenu>

    <com.getbase.floatingactionbutton.FloatingActionsMenu

        android:id="@+id/famRecursos"
        android:layout_width="253dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:gravity="right"
        fab:fab_labelStyle="@style/menu_labels_style"
        fab:fab_labelsPosition="right"
        android:layout_above="@+id/textView16"
        android:layout_alignParentStart="true">
    </com.getbase.floatingactionbutton.FloatingActionsMenu>

    <com.getbase.floatingactionbutton.FloatingActionsMenu

        android:id="@+id/famVidas"
        android:layout_width="253dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:gravity="right"
        fab:fab_labelStyle="@style/menu_labels_style"
        fab:fab_labelsPosition="left"
        android:layout_above="@+id/textView17"
        android:layout_alignParentEnd="true">
    </com.getbase.floatingactionbutton.FloatingActionsMenu>

    <com.getbase.floatingactionbutton.FloatingActionsMenu

        android:id="@+id/famPoder"
        android:layout_width="253dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:gravity="right"
        fab:fab_labelStyle="@style/menu_labels_style"
        fab:fab_labelsPosition="right"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
    </com.getbase.floatingactionbutton.FloatingActionsMenu>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/txtDineroTienda"
        android:id="@+id/txtDinero"
        android:textColor="#ffffffff"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Poder"
        android:id="@+id/textView13"
        android:textColor="#ffffffff"
        android:layout_below="@+id/famPoder"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Cartas"
        android:id="@+id/textView15"
        android:layout_below="@+id/famCartas"
        android:layout_alignParentEnd="true"
        android:textColor="#ffffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Recursos"
        android:id="@+id/textView16"
        android:layout_alignParentBottom="true"
        android:textColor="#ffffffff"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Vidas"
        android:id="@+id/textView17"
        android:textColor="#ffffffff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
